<%= form_with model: [:admin, question], url: admin_questions_path, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group mt-2">
    <%= f.label :question_title %>
    <%= f.text_field :question_title, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :question_body %>
    <%= f.text_area :question_body, class: 'form-control', rows: '3' %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :correct_choice %>
    <%= f.text_field :correct_choice, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :incorrect_choice_1 %>
    <%= f.text_field :incorrect_choice_1, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :incorrect_choice_2 %>
    <%= f.text_field :incorrect_choice_2, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :incorrect_choice_3 %>
    <%= f.text_field :incorrect_choice_3, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= f.submit t('defaults.create'), class: 'btn btn-primary' %>
  </div>
<% end %>