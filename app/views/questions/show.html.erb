<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= @question.title %></h1>
      <div class="question_body">
        <p><%= @question.body %></p>
      </div>
      <div class="mt-3 list-inline-item">
        <%= link_to t('defaults.edit'), edit_admin_question_path(@question), class: 'btn btn-info' %>
      </div>
      <div class="list-inline-item">
        <%= link_to t('defaults.destroy'), admin_question_path(@question), method: :delete, data: {confirm: t('defaults.delete_confirm')}, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>