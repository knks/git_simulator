<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2 mt-5">
      <h1><%= t '.title' %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group mt-3">
          <%= f.label :name, User.human_attribute_name(:name) %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions mt-4">
          <%= f.submit t('defaults.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center mt-3'>
        <%= link_to t('.to_resister_page'), new_user_path %>
        <%= link_to t('.password_forget'), '#' %>
      </div>
    </div>
  </div>
</div>
